  res.render("players/clayton", {
    title: "Clayton",
    id: req.params.id,
    imagePath: "/images/profile/claytonprofile.jpg",
    planeswalkerPath: "/images/planeswalker/invoker.jpg",
    tableData: claytonData.tableData,
    formatData: claytonData.formatData,
  });
});

